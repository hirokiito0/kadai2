<body>
  <p id="notice"></p>
  <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
   <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label>Body</label>
      <%= f.text_area:body %>
    </div>
    <div class="actions"><%= f.submit 'Update Book' %></div>
  <% end %>
  <a><%= link_to "show",book_path(@book.id) %></a>
  |
  <a><%= link_to "Back","/books#index" %></a>
</body>