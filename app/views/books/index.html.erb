<body>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      
    </tbody>  
  </table>
  <h2>New book</h2>
  <%= form_with model:@book, url:'/books', local:true do |f| %>
    <div>
      <label>Title</label>
      <%= f.text_field:title %>
    </div>
    <div>
      <label>Body</label>
      <%= f.text_area:body %>
    </div>
    <div>
      <%= f.submit'Create Book' %>
    </div>
<% end %>
</body>