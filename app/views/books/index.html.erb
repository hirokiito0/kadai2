<body>
  <p id="notice"></p>
  <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colsoan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show","/books#show" %></td>
        <td><%= link_to "Edit","/books#edit" %></td>
        <td><%= link_to "Destroy","/books#index" %></td>
      <% end %>
    </tbody>
  </table>
  <h2>New book</h2>
  <%= form_with model:@book, local:true do |f| %>
    <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label>Body</label>
      <%= f.text_area:body %>
    </div>
    <div><%= f.submit 'Create Book' %></div>
  <% end %>
</body>
